{% extends "base.html.twig" %}
    {% block title %}Connexion ou inscription{% endblock %}

{% block body %}


<body class="customer-account-login inner-page">
<div id="page">
    <!-- Header -->


    {% include'components/nav.html.twig' %}

    <!-- Main Container -->
    <section class="main-container col1-layout bounceInUp animated">
        <div class="main container">
            <!-- <div class="account-login"> -->
            <div class="admin-account">


                <fieldset class="col2-set">


                    <div class="col-1 new-users">
                        <div class="page-title">
                            <h1>Inscription</h1>
                        </div>
                        <div class="content">
                            {{ form(form) }}
                        </div>
                    </div>

                    <div class="col-2 registered-users">
                        <div class="page-title">
                            <h1>Connexion</h1>
                        </div>
                        <div class="content">
                            <form action="{{ path('app_login') }}" method="post">

                                <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
                                <label for="inputEmail">Email</label>
                                <input type="email" name="email" id="inputEmail" class="form-control" required autofocus>
                                <label for="inputPassword">Password</label>
                                <input type="password" name="password" id="inputPassword" class="form-control" required>

                                <input type="hidden" name="_csrf_token"
                                       value="{{ csrf_token('authenticate') }}"
                                >

                                {#
                                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                                    See https://symfony.com/doc/current/security/remember_me.html

                                    <div class="checkbox mb-3">
                                        <label>
                                            <input type="checkbox" name="_remember_me"> Remember me
                                        </label>
                                    </div>
                                #}

                                <button class="btn btn-lg btn-primary" type="submit">
                                    Sign in
                                </button>
                            </form>
                        </div>
                    </div>
            </fieldset>

            <br>
            <br>
                <p class="required">* Champs obligatoires</p>
        </div>
        <br>
        <br>
        <br>
        <br>
        <br>
</div>
</section>
<!-- Main Container End -->
{% endblock %}